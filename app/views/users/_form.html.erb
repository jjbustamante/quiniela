
<%= render "shared/error_messages", :target => @user %>

<div class="form-group">
<%= form.label "Nombre" , :class => "col-sm-3 col-lg-3 control-label"%>
<div class="col-sm-8 col-lg-8">
<%= form.text_field :name , :class =>  "form-control" , :placeholder => "Nombre"%>
 </div>
  </div>
<div class="form-group">
<%= form.label "Email" , :class => "col-sm-3 col-lg-3 control-label" %>
<div class="col-sm-8 col-lg-8">
<%= form.text_field :email , :class =>  "form-control" , :placeholder => "Email"%>
 </div>
  </div>
<div class="form-group">
<%= form.label "Contraseña", form.object.new_record? ? nil : "Change password" , :class => "col-sm-3 col-lg-3 control-label" %>
<div class="col-sm-8 col-lg-8">
<%= form.password_field :password , :class =>  "form-control" , :placeholder => "Contraseña"%>
 </div>
  </div>
<div class="form-group">
<%= form.label "Confirmación Contraseña" , :class => "col-sm-3 col-lg-3 control-label" %>
<div class="col-sm-8 col-lg-8">
<%= form.password_field :password_confirmation , :class =>  "form-control" , :placeholder => "Confirmación Contraseña"%>
 </div>
  </div>
