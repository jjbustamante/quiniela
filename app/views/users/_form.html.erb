
<%= render "shared/error_messages", :target => @user %>

 <div class="form-group">
<%= form.label "Foto" , :class => "col-lg-3 control-label"%>
<div class="col-lg-8">
 <%= form.file_field :photo %>
 </div>
  </div>
<div class="form-group">
<%= form.label "Nombre" , :class => "col-lg-3 control-label"%>
<div class="col-lg-8">
<%= form.text_field :name , :class =>  "form-control" , :placeholder => "Nombre"%>
 </div>
  </div>
<div class="form-group">
<%= form.label "Email" , :class => "col-lg-3 control-label" %>
<div class="col-lg-8">
<%= form.text_field :email , :class =>  "form-control" , :placeholder => "Email"%>
 </div>
  </div>
<div class="form-group">
<%= form.label "Contraseña", form.object.new_record? ? nil : "Change password" , :class => "col-lg-3 control-label" %>
<div class="col-lg-8">
<%= form.password_field :password , :class =>  "form-control" , :placeholder => "Contraseña"%>
 </div>
  </div>
<div class="form-group">
<%= form.label "Confirmación Contraseña" , :class => "col-lg-3 control-label" %>
<div class="col-lg-8">
<%= form.password_field :password_confirmation , :class =>  "form-control" , :placeholder => "Confirmación Contraseña"%>
 </div>
  </div>
