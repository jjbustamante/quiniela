
<div class="separator-top"></div>

<% if flash[:success] %>
<div class="container">
  <div class="row">
          <div class="col-lg-12">
            <div class="bs-example">
              <div class="alert alert-dismissable alert-success">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <p><strong><%=flash[:success]%></strong></p>
              </div>
            </div>
          </div>
        </div>
  </div>
<% end %>

<div class="container logo-fifa">

<div class="row">
<div class="col-lg-12">
<h1>Bienvenido<% if @session %>, <%= @session.name %>
<% end %>
</h1>
<p class="lead">¿Aun no comienzas? Crea tu primera quiniela haciendo click <a href="/quinielas/new">AQUÍ</a></p>
</div>
</div>


</div>


<div class="container">
<% if @session %>



<div class="col-lg-12">


              <%= render "show_quinielas",  :locals => { :quinielas => @quinielas }  %>

</div>




<% else %>


<div class="bs-docs-section">
        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="forms">¡Entra ahora y danos tus predicciones!</h1>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-6">
            <div class="well">
              

              <%= render "user_sessions/new_login", :target => @user_session %>


            </div>
          </div>


          <div class="col-lg-6">
            
            <div class="bs-example">
              <div class="jumbotron">
                <h2>¿Aun no te registras?</h2>
                <p><a href="/signup" class="btn btn-warning btn-lg">¡REGISTRARME!</a></p>
              </div>
            </div>
          </div>
  
        </div>
      </div>



<% end %>

</div>



    

 