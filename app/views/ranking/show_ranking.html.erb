<div class="separator-top"></div>
<div class="container">

<% if @session %>


<div class="bs-docs-section">

        <div class="row">
          <div class="col-sm-12 col-lg-12">
           

             <div class="page-header">
              <h1 id="tables">Ranking de usuarios</h1>
            </div>
            <table class="table table-striped table-hover ranking-table">
            	<tr>
                  <td>Posicion</td>
                  <td colspan="2">Usuario</td>
                  <td>Nombre de quiniela</td>
                  <td>Puntos acumulados</td>
                </tr> 
           
            <%
                @var1 =  ''
                @primero = '100px'
                @segundo = '80px'
                @tercero = '60px'
                @left = '40px'
                @counter = 1

                @quinielas.each do |quiniela| 
                    if @counter == 1
                      @var1 = @primero
                      @fontsize = 'font-size: 20pt;'
                    end
                    if @counter == 2
                       @var1 = @segundo
                       @fontsize = 'font-size: 18pt;'
                    end
                    if @counter == 3
                       @var1 = @tercero
                       @fontsize = 'font-size: 16pt;'
                    end
                    if @counter > 3
                       @var1 = @left
                       @fontsize = 'font-size: 14pt;'
                    end
                  %>
             
                <tr style="<%=@fontsize%>">
                  <td><span class="stuart-middle">#<%= @counter %></span></td>
                  <td><img style="width:<%=@var1%>" src="<%= quiniela.user.photo.url %>"></td>
                  <td><span class="stuart-middle"><%= quiniela.user.name %></span></td>
                  <td><span class="stuart-middle"><a href="/quinielas/showro/<%= quiniela.id %>"><%= quiniela.name %></a></span></td>
                  <td><span class="stuart-middle"><%= quiniela.points ? quiniela.points : 0 %></span></td>
                </tr> 

               
 <%
 @counter = @counter + 1 
 end %>
                           

            </table>
          </div>

          
        </div>
      </div>



<% else %>


<div class="bs-docs-section">
        <div class="row">
          <div class="col-sm-12 col-lg-12">
            <div class="page-header">
              <h1 id="forms">¡Entra ahora y danos tus predicciones!</h1>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-6 col-lg-6">
            <div class="well">
              

              <%= render "user_sessions/new_login", :target => @user_session %>


            </div>
          </div>


          <div class="col-sm-6 col-lg-6">
            
            <div class="bs-example">
              <div class="jumbotron">
                <h2>¿Aun no te registras?</h2>
                <p><a href="/signup" class="btn btn-warning btn-lg">¡REGISTRARME!</a></p>
              </div>
            </div>
          </div>
  
        </div>
      </div>



<% end %>




</div>


