<!DOCTYPE html>
<html>
<head>
  <title>Quiniela</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
  <link href="/assets/bootstrap.min.css?body=1" media="all" rel="stylesheet" type="text/css">
<link href="http://fonts.googleapis.com/css?family=Signika:600" rel="stylesheet" type="text/css">
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a href="/" class="navbar-brand"><strong>Quiniela<span style="font-size:20pt;"><span style="color:green">2</span><span style="color:white">0</span><span style="color:red">1</span><span style="color:yellow">4</span></span></strong></a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            
            <li class="<% if @active_index %>, <%= @active_index %><% end %>">
              <a href="/">Mis Quinielas</a>
            </li>
            <li>
              <a href="/">Top Usuarios</a>
            </li>
            <li class="<% if @active_matches %>, <%= @active_matches %><% end %>">
              <a href="/matches">Cronograma de Partidos</a>
            </li>
            <li>
              <a href="/">Resultados</a>
            </li>
          </ul>

<% if !@session %>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/login" >Entrar</a></li>
            <li><a href="/signup" >Registrarse</a></li>
          </ul>
<% else %>
 <ul class="nav navbar-nav navbar-right">
            <li><a href="/logout" >Salir</a></li>
           
          </ul>
<% end %>

        </div>
      </div>
    </div>

<%= yield %>


  <div class="container ">
      <footer>
        <div class="row">
          <div class="col-lg-12">

            <ul class="list-unstyled">
              <li class="pull-right"><a href="#top">Back to top</a></li>
              <li style="color:#666;">Quiniela para el mundial Brasil 2014.</li>
            </ul>
            

          </div>
        </div>

      </footer>


    </div>
    <script src="/assets/jquery-1.10.2.min.js"></script>
    <script src="/assets/bootstrap.min.js"></script>
<script src="/assets/bootswatch.js"></script>
</body>
</html>
